# Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===== BACKEND API CONFIGURATION =====
# For local development (when backend is separate):
# NEXT_PUBLIC_API_URL=http://localhost:5000
# NEXT_PUBLIC_SOCKET_URL=http://localhost:5000

# For production (when backend is integrated):
# Leave these empty or remove them - API routes are built-in

# ===== DATABASE =====
MONGODB_URI=mongodb://localhost:27017/sagarsaathi
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sagarsaathi

# ===== AUTHENTICATION (NextAuth) =====
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# ===== GOOGLE OAUTH =====
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===== EMAIL CONFIGURATION (Nodemailer) =====
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# ===== DATABASE =====
MONGODB_URI=mongodb://localhost:27017/sagarsaathi
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sagarsaathi

# ===== SOCKETS & API =====
NEXT_PUBLIC_API_URL=http://localhost:5001
NEXT_PUBLIC_SOCKET_URL=http://localhost:5001

# ===== CLOUDINARY (Optional) =====
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===== MISC =====
JWT_SECRET=your_jwt_secret
NODE_ENV=development
